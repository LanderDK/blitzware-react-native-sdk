{
  "name": "blitzware-react-native-sdk",
  "version": "1.1.0",
  "description": "BlitzWare authentication SDK for React Native applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf lib",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "blitzware",
    "authentication",
    "react-native",
    "auth",
    "oauth",
    "mobile",
    "ios",
    "android"
  ],
  "author": "BlitzWare",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blitzware/blitzware-react-native-sdk.git"
  },
  "homepage": "https://blitzware.xyz",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "axios": "^1.12.2",
    "buffer": "^6.0.3",
    "expo-auth-session": "^6.0.0",
    "expo-crypto": "^15.0.0",
    "expo-secure-store": "^14.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
